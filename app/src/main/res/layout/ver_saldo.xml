<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98BAAE"
    android:orientation="horizontal"
    tools:context="com.example.shareapp.VerLista">

    <Button
        android:id="@+id/buttonAtras"
        android:layout_width="87dp"
        android:layout_height="41dp"

        android:layout_marginBottom="636dp"
        android:text="Atrás"
        app:backgroundTint="#354A31"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/buttonRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <Button
        android:id="@+id/buttonAddSaldo"
        android:layout_width="151dp"
        android:layout_height="61dp"

        android:layout_marginBottom="188dp"
        android:text="Añadir saldo"
        app:backgroundTint="#2C6323"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/buttonRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="377dp"
        android:layout_height="32dp"
        android:text="Víctor Fernández Ruiz para ILERNA ONLINE - Junio 2021"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="679dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="146dp"
        android:layout_height="135dp"
        app:srcCompat="@drawable/d5d7afad9f9b43b6b7398c71fe255123"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="301dp"
        android:layout_height="51dp"
        android:text="Saldo del usuario que creó la lista:"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="167dp" />

    <EditText
        android:id="@+id/editSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="427dp" />

    <TextView
        android:id="@+id/textSALDO"
        android:layout_width="161dp"
        android:layout_height="42dp"
        android:text="Saldo: "
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="237dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="566dp" />
</androidx.constraintlayout.widget.ConstraintLayout>